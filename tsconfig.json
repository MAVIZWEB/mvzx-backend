 {
  "compilerOptions": {
    "target": "ES2020",           // Node 16+ compatible
    "module": "CommonJS",         // Node.js module system
    "outDir": "dist",             // Compiled files go here
    "rootDir": "src",             // Source folder
    "esModuleInterop": true,      // Allows import x from 'y'
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
